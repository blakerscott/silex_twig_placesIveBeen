<html>
<head>
    <title>Places I've been</title>
</head>
<body>
    <h1>Cities I've Visited</h1>

    {% if cities is not empty %}
        <p>Here are the places you've been:</p>
        <ul>
            {% for city in cities %}
                <li>{{ city.getCity }}</li>
                <ul>
                  <li>{{ city.getLandmark }}</li>
                </ul>
        {% endfor %}
          </ul>
    {% endif %}

    <form action='/cities' method='post'>
        <label for='description'>City Name</label>
        <input id='description' name='description' type='text'><br><br>
        <label for='landmark'>Favorite Landmark</label>
        <input id='landmark' name='landmark' type='text'><br>

        <button type='submit'>Add City</button>
    </form>
    <form action='/delete_cities' method='post'>
        <button type='submit'>Clear</button>
    </form>

</body>
</html>
